@model PeliculasWeb.Models.WatchlistViewModel

@{
    ViewData["Title"] = "Eliminar de la Lista de Visualización";
}

<h2>¿Deseas eliminar este ítem?</h2>

<div class="card mt-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Usuario ID</dt>
            <dd class="col-sm-9">@Model.UsuarioId</dd>

            <dt class="col-sm-3">Pelicula/Serie ID</dt>
            <dd class="col-sm-9">@Model.ItemId</dd>

            <dt class="col-sm-3">Tipo</dt>
            <dd class="col-sm-9">@Model.Tipo</dd>

            <dt class="col-sm-3">Prioridad</dt>
            <dd class="col-sm-9">@Model.Prioridad</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
