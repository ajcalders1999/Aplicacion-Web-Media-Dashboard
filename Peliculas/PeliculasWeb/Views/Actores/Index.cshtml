@model IEnumerable<PeliculasWeb.Models.Actor>

@{
    ViewData["Title"] = "Actores";
}

<h1 class="titulo">🎭 Lista de Actores y Directores</h1>
<!-- Carrusel -->
<div id="carouselActoresDirectores" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        @* Primer item activo *@
        <div class="carousel-item active">
            <img src="https://pymstatic.com/67427/conversions/frases-actores-social.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block" style="background-color: rgba(0,0,0,0.5); border-radius: 10px;">
                <h5 style="color: gold;">Leonardo DiCaprio.</h5>
                <p>Actor</p>
            </div>
        </div>

        <div class="carousel-item">
            <img src="https://media.vandalsports.com/i/640x360/7-2025/202577134735_1.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block" style="background-color: rgba(0,0,0,0.5); border-radius: 10px;">
                <h5 style="color: gold;">Scarlett Johansson</h5>
                <p>Actriz</p>
            </div>
        </div>

        <div class="carousel-item">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRlc5h5APmSwbXV7ZCS7ND58iafqQ3vK3LEYA&s.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block" style="background-color: rgba(0,0,0,0.5); border-radius: 10px;">
                <h5 style="color: gold;">Christopher Nolan</h5>
                <p>Director</p>
            </div>
        </div>
    </div>

    <!-- Controles -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselActoresDirectores" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselActoresDirectores" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<p>
    <a asp-action="Create" class="btn-dorado">➕ Nuevo Actor o Director Fav</a>
</p>

<table class="table table-dark table-bordered tabla-actores">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Nacionalidad</th>
            <th>Biografía</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Nacionalidad</td>
                <td>@item.Biografia</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ActorId" class="btn btn-sm btn-outline-warning">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@item.ActorId" class="btn btn-sm btn-outline-light">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.ActorId" class="btn btn-sm btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Styles {
    <style>
        body {
            background-color: #000;
            color: #FFD700;
        }

        .titulo {
            margin-bottom: 20px;
            color: #FFD700;
        }

        .btn-dorado {
            background-color: #FFD700;
            color: #000;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
        }

        .tabla-actores th, .tabla-actores td {
            vertical-align: middle;
            text-align: center;
        }
    </style>
}
