@model PeliculasWeb.Models.Actor

@{
    ViewData["Title"] = "Crear Actor";
}

@section Styles {
    <style>
        .form-container {
            background-color: #111;
            color: gold;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 0 10px gold;
            max-width: 600px;
            margin: auto;
        }

        label {
            color: gold;
        }

        .form-control {
            background-color: #222;
            color: gold;
            border: 1px solid gold;
        }

        .btn-gold {
            background-color: gold;
            color: black;
            border: none;
        }

            .btn-gold:hover {
                background-color: #e6c200;
                color: black;
            }

        h1 {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        a {
            color: gold;
        }
    </style>
}

<div class="form-container">
    <h1>Crear Actor</h1>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Apellido" class="form-label"></label>
            <input asp-for="Apellido" class="form-control" />
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Nacionalidad" class="form-label"></label>
            <input asp-for="Nacionalidad" class="form-control" />
            <span asp-validation-for="Nacionalidad" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Biografia" class="form-label"></label>
            <textarea asp-for="Biografia" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Biografia" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <input type="submit" value="Crear" class="btn btn-gold" />
            <a asp-action="Index" class="btn btn-link">Volver a la lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
