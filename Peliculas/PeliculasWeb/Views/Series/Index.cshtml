<h1 class="mb-4">üì∫ Series por G√©nero</h1>

<!-- Selector de g√©nero -->
<form method="get" asp-controller="Series" asp-action="Index" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <select name="idGenero" class="form-select" onchange="this.form.submit()">
                @foreach (var genero in Model.Generos)
                {
                    if (genero.Id == Model.GeneroSeleccionado)
                    {
                        <option value="@genero.Id" selected="selected">@genero.Nombre</option>
                    }
                    else
                    {
                        <option value="@genero.Id">@genero.Nombre</option>
                    }
                }
            </select>
        </div>
    </div>
</form>

<!-- Series -->
@if (Model.Peliculas != null && Model.Peliculas.Any())
{
    <div class="row">
        @foreach (var serie in Model.Peliculas)
        {
            <div class="col-md-3">
                <div class="card mb-4 shadow-sm h-100">
                    <img class="card-img-top" src="@serie.ImageURL" alt="Imagen no disponible" style="height: 300px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@serie.Title</h5>
                        <p class="card-text">@serie.Description?.Substring(0, Math.Min(100, serie.Description.Length))...</p>
                        <p><strong>Fecha:</strong> @(serie.ReleaseDate?.ToString("yyyy-MM-dd") ?? "No disponible")</p>
                        <p><strong>Calificaci√≥n:</strong> ‚≠ê @(serie.Rating > 0 ? serie.Rating.ToString("0.0") : "No disponible")</p>

                        <!-- ‚≠ê Formulario para agregar a favoritos -->
                        <form asp-controller="Favoritos" asp-action="AgregarDesdeVista" method="post" class="mt-auto">
                            <input type="hidden" name="Id" value="@serie.Id" />
                            <input type="hidden" name="Title" value="@serie.Title" />
                            <input type="hidden" name="Description" value="@serie.Description" />
                            <input type="hidden" name="ImageURL" value="@serie.ImageURL" />
                            <input type="hidden" name="ReleaseDate" value="@serie.ReleaseDate?.ToString("yyyy-MM-dd")" />
                            <input type="hidden" name="Rating" value="@serie.Rating" />
                            <input type="hidden" name="MediaType" value="series" />
                            @if (Model.FavoritosIds.Contains(serie.Id))
                            {
                                <button class="btn btn-success mt-auto" disabled>
                                    ‚≠ê Agregado
                                </button>
                            }
                            else
                            {
                                <button type="button"
                                        class="btn btn-warning mt-auto"
                                        onclick="agregarAFavoritos(this, @serie.Id, 'series', @serie.Rating)">
                                    ‚≠ê Agregar a Favoritos
                                </button>
                            }
                        </form>
                        <form asp-controller="Watchlist" asp-action="Create" method="post">
                            <input type="hidden" name="UsuarioId" value="@Context.Session.GetInt32("UsuarioId")" />
                            <input type="hidden" name="ItemId" value="@serie.Id" />
                            <input type="hidden" name="Tipo" value="series" />
                            <input type="hidden" name="Prioridad" value="1" />
                            <button type="submit" class="btn btn-outline-success w-100 mt-2">‚ûï Agregar a Lista de Visualizaci√≥n</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>‚ö†Ô∏è No se encontraron series para este g√©nero.</p>
}

@{
    var usuarioId = Context.Session.GetInt32("UsuarioId") ?? -1;
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            window.agregarAFavoritos = async function (button, itemId, tipo, rating) {
                const usuarioId = @usuarioId;

                if (usuarioId === -1) {
                    alert("Debe iniciar sesi√≥n para agregar a favoritos.");
                    return;
                }

                const favorito = {
                    usuarioId: usuarioId,
                    itemId: itemId,
                    tipo: tipo,
                    comentario: "",
                    calificacion: Math.max(1, Math.round(rating || 0))
                };

                const response = await fetch("https://localhost:7244/api/favoritos", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify(favorito)
                });

                if (response.ok) {
                    button.disabled = true;
                    button.classList.remove("btn-warning");
                    button.classList.add("btn-success");
                    button.innerHTML = "‚≠ê Agregado";
                } else {
                    alert("‚ùå Error al agregar a favoritos");
                }
            };
        });
    </script>
}









