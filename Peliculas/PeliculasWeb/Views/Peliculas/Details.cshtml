@model PeliculasWeb.Models.MediaViewModel

@{
    ViewData["Title"] = "Detalle de Película";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageURL" alt="Imagen de @Model.Title" class="img-fluid rounded shadow" />
        </div>
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <p><strong>Fecha de lanzamiento:</strong> @Model.ReleaseDate?.ToString("yyyy-MM-dd")</p>
            <p><strong>Calificación:</strong> ⭐ @Model.VoteAverage</p>
            <p><strong>Descripción:</strong></p>
            <p>@Model.Description</p>

            <a asp-action="Index" class="btn btn-secondary mt-3">⬅ Volver a Películas</a>
        </div>
    </div>
</div>

