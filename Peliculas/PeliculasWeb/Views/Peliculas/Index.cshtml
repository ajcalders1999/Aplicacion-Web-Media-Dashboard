<h1 class="mb-4 text-center">üé¨ Pel√≠culas por G√©nero</h1>

<!-- Selector de g√©nero -->
<form method="get" asp-controller="Peliculas" asp-action="Index" class="mb-4">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <select name="idGenero" class="form-select" onchange="this.form.submit()">
                @foreach (var genero in Model.Generos)
                {
                    if (genero.Id == Model.GeneroSeleccionado)
                    {
                        <option value="@genero.Id" selected="selected">@genero.Nombre</option>
                    }
                    else
                    {
                        <option value="@genero.Id">@genero.Nombre</option>
                    }
                }
            </select>
        </div>
    </div>
</form>

<!-- Pel√≠culas -->
@if (Model.Peliculas != null && Model.Peliculas.Any())
{
    <div class="row">
        @foreach (var pelicula in Model.Peliculas)
        {
            <div class="col-md-3">
                <div class="card mb-4 shadow-sm h-100">
                    <img class="card-img-top" src="@pelicula.ImageURL" alt="Imagen no disponible"
                         style="height: 300px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@pelicula.Title</h5>
                        <p class="card-text">
                            @(pelicula.Description?.Length > 100
                                ? pelicula.Description.Substring(0, 100) + "..."
                                : pelicula.Description)
                        </p>
                        <p>ID: @pelicula.Id</p>
                        <p><strong>Fecha:</strong> @(pelicula.ReleaseDate?.ToString("yyyy-MM-dd") ?? "No disponible")</p>
                        <p><strong>Calificaci√≥n:</strong> ‚≠ê @(pelicula.Rating > 0 ? pelicula.Rating.ToString("0.0") : "No disponible")</p>

                        @if (Model.FavoritosIds.Contains(pelicula.Id))
                        {
                            <button class="btn btn-success mt-auto" disabled>
                                ‚≠ê Agregado
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-warning mt-auto"
                                    onclick="agregarAFavoritos(this, @pelicula.Id, 'movie', @Math.Max(1, Math.Round(pelicula.Rating)))">
                                ‚≠ê Agregar a Favoritos
                            </button>
                        }

                        @if (Model.WatchlistIds.Contains(pelicula.Id))
                        {
                            <button class="btn btn-success w-100 mt-2" disabled>
                                ‚úÖ Agregado a Lista de Visualizaci√≥n
                            </button>
                        }
                        else
                        {
                            <form asp-controller="Watchlist" asp-action="Create" method="post">
                                <input type="hidden" name="ItemId" value="@pelicula.Id" />
                                <input type="hidden" name="UsuarioId" value="@Context.Session.GetInt32("UsuarioId")" />
                                <input type="hidden" name="Tipo" value="movie" />
                                <input type="hidden" name="Prioridad" value="1" />
                                <button type="submit" class="btn btn-outline-success w-100 mt-2">
                                    ‚ûï Agregar a Lista de Visualizaci√≥n
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-warning">‚ö†Ô∏è No se encontraron pel√≠culas para este g√©nero.</p>
}

@{
    var usuarioId = Context.Session.GetInt32("UsuarioId") ?? -1;
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            window.agregarAFavoritos = async function (button, itemId, tipo, rating) {
                const usuarioId = @usuarioId;

                if (usuarioId === -1) {
                    alert("Debe iniciar sesi√≥n para agregar a favoritos.");
                    return;
                }

                const favorito = {
                    usuarioId: usuarioId,
                    itemId: itemId,
                    tipo: tipo,
                    comentario: "",
                    calificacion: Math.max(1, Math.round(rating))
                };

                const response = await fetch("https://localhost:7244/api/favoritos", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify(favorito)
                });

                if (response.ok) {
                    button.disabled = true;
                    button.classList.remove("btn-warning");
                    button.classList.add("btn-success");
                    button.innerHTML = "‚≠ê Agregado";
                } else {
                    alert("‚ùå Error al agregar a favoritos");
                }
            };
        });
    </script>
}






